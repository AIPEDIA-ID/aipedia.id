---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
---

<Layout title="Blog Posts">
  <div class="max-w-7xl mx-auto py-12 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map(post => (
        <article class="bg-neutral-800 border border-neutral-700 rounded-lg p-6 hover:border-[#5978ea] transition">
          <h2 class="text-white text-2xl font-bold mb-2">
            <a href={`/posts/${post.slug}`} class="hover:text-[#5978ea] transition">{post.data.title}</a>
          </h2>
          <p class="text-neutral-400 mb-4">{post.data.excerpt}</p>
          <time class="text-sm text-neutral-500">{post.data.date}</time>
        </article>
      ))}
    </div>
  </div>
</Layout>
