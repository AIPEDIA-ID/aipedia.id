---
import '../styles/global.css';
---
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>404 - Page Not Found</title>
    <link rel="stylesheet" href="/global.css" />
  </head>
  <body class="bg-neutral-900 text-white min-h-screen flex items-center justify-center px-6">
    <div class="text-center max-w-md">
      <h1 class="text-6xl font-bold mb-4">404</h1>
      <p class="text-lg text-gray-400 mb-8">Page not found.</p>
      <a href="/" class="inline-block text-sm font-medium text-white bg-[#5978ea] hover:bg-[#3f5fd6] rounded-full py-2 px-4 transition">
        Back to Home
      </a>
    </div>
  </body>
</html>
