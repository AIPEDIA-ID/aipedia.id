---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import EmailSubscriptionForm from '../components/EmailSubscriptionForm.astro';
---

<Layout>
  <Navbar />
  
  <!-- Subscribe Page Content -->
  <section class="bg-white min-h-screen flex items-center justify-center px-6 lg:px-8">
    <div class="max-w-lg mx-auto text-center">
      <!-- Logo/Brand -->
      <div class="mb-8">
        <h1 class="text-3xl md:text-4xl font-bold text-text mb-3">
          AIPEDIA.ID
        </h1>
        <div class="w-16 h-1 bg-primary mx-auto rounded-full"></div>
      </div>
      
      <!-- Main Heading -->
      <h2 class="text-2xl md:text-3xl font-bold text-text mb-4 leading-tight">
        Subscribe to Our Newsletter
      </h2>
      
      <!-- Description -->
      <p class="text-lg text-gray-600 mb-8 leading-relaxed">
        Dapatkan info tools AI terbaru, insight praktis, dan strategi cerdas untuk bisnis kecilâ€”langsung ke inbox Anda, gratis setiap minggu.
      </p>
      
      <!-- Subscribe Form -->
      <div class="w-full flex justify-center mb-4">  
        <EmailSubscriptionForm />
      </div>
      
      <!-- Benefits -->
      <div class="space-y-3 mb-8">
        <div class="flex items-center justify-center text-gray-600 text-sm">
          <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Weekly AI insights & tools review
        </div>
        <div class="flex items-center justify-center text-gray-600 text-sm">
          <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Practical business strategies
        </div>
        <div class="flex items-center justify-center text-gray-600 text-sm">
          <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Exclusive content for subscribers
        </div>
      </div>
      
      <!-- Trust Indicators -->
      <div class="text-center">
        <p class="text-gray-500 text-sm mb-4">
          Join <span class="font-bold text-text">1,000+</span> solopreneurs getting AI insights weekly
        </p>
        <p class="text-gray-400 text-xs">
          No spam, unsubscribe anytime. We respect your privacy.
        </p>
      </div>
      
      <!-- Back to Home Link -->
      <div class="mt-8">
        <a 
          href="/" 
          class="inline-flex items-center text-gray-500 hover:text-primary transition-colors text-sm"
        >
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Home
        </a>
      </div>
    </div>
  </section>
  
  <Footer />
</Layout>

<style>
  /* Custom focus styles for better accessibility */
  input:focus {
    box-shadow: 0 0 0 3px rgba(89, 120, 234, 0.1);
  }
  
  button:focus {
    box-shadow: 0 0 0 3px rgba(89, 120, 234, 0.1);
  }
</style>