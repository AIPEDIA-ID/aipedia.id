---
interface Props {
	title?: string;
	description?: string;
	ogImage?: string;
}

const {
	title = "AIPEDIA.ID - Newsletter AI untuk Solopreneur & Bisnis Kecil | Tips & Strategi Mingguan",
	description = "Dapatkan info tools AI terbaru, insight praktis, dan strategi cerdas untuk bisnis kecilâ€”langsung ke inbox Anda, gratis setiap minggu. Khusus untuk solopreneur Indonesia.",
	ogImage = "/logo.png"
} = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="robots" content="index, follow" />

		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:image" content={ogImage} />

		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImage} />
	</head>
	<body class="bg-white text-text min-h-screen">
		<slot />
	</body>
</html>