---
// Data untuk section header
import howItWorks from '../data/howItWorks.json';
const { sectionHeader, steps, bottomCTA } = howItWorks;
---

<section id="how-it-works" class="py-16 md:py-24 px-6 relative bg-gradient-to-br from-gray-900 via-black to-gray-900 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-indigo-50/50 via-white to-purple-50/50 dark:from-gray-900 dark:via-black dark:to-gray-900"></div>
  
  <div class="relative z-10 max-w-5xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        {sectionHeader.title.split("AIPEDIA")[0]}
        <span class="bg-gradient-to-r from-primary-400 to-primary-600 bg-clip-text text-transparent">AIPEDIA</span>
        {sectionHeader.title.split("AIPEDIA")[1]}
      </h2>
      <p class="text-base text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
        {sectionHeader.description}
      </p>
    </div>
    
    <!-- Steps Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12 justify-items-center max-w-4xl mx-auto">
      {steps.map((step) => (
        <div class="group relative col-span-1">
          <!-- Circle indicator - fixed positioning to match design -->
          <div class="absolute -left-2 -top-2 w-10 h-10 bg-gradient-to-r from-primary-400 to-primary-600 rounded-full flex items-center justify-center text-xl font-bold z-10">
            {step.number}
          </div>
          <div class="p-5 pt-8 rounded-xl bg-white/60 dark:bg-white/5 backdrop-blur-sm border border-gray-200 dark:border-white/10 hover:border-primary-500/30 dark:hover:border-primary-500/30 hover:bg-white/80 dark:hover:bg-white/10 transition-all duration-300 h-full">
            <h3 class="text-xl font-semibold mb-3 text-gray-900 dark:text-white">{step.title}</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-3 text-base">{step.description}</p>
            <ul class="space-y-1.5 text-sm text-gray-600 dark:text-gray-300">
              {step.features.map((feature) => (
                <li class="flex items-center gap-2">
                  <span class="w-1 h-1 bg-primary-400 rounded-full"></span>
                  {feature}
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>