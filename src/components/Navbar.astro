---
const menuItems = [
  // { href: '/sponsorship', text: 'Sponsorships' },
  { href: '/newsletter-kit', text: 'Newsletter Kit' },
  { href: '/about', text: 'About' },
  // { href: '#', text: 'Login' },
  { href: '/subscribe', text: 'Subscribe', isButton: true }
];
---

<nav class="fixed top-4 left-1/2 transform -translate-x-1/2 z-50 w-full max-w-4xl mx-auto px-4">
  <div class="bg-white/80 backdrop-blur-md border border-white/20 rounded-2xl shadow-lg px-6 py-3">
    <div class="flex justify-between items-center h-12">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="text-lg font-bold text-text flex items-center gap-2 group">
          <img src="/logo.png" alt="AIPEDIA.ID Logo" class="h-5 w-auto">
          <span>AIPEDIA.ID</span>
        </a>
      </div>
      
      <!-- Navigation -->
      <div class="hidden md:block">
        <div class="flex items-center space-x-6">
          {menuItems.map(item => (
            item.isButton ? (
              <a href={item.href} class="bg-primary/90 text-white px-4 py-2 rounded-xl font-medium hover:bg-primary transition-all duration-200 backdrop-blur-sm">
                {item.text}
              </a>
            ) : (
              <a href={item.href} class="text-text/80 hover:text-primary px-3 py-2 font-medium transition-all duration-200 hover:bg-white/50 rounded-lg">
                {item.text}
              </a>
            )
          ))}
        </div>
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" class="mobile-menu-button bg-white/50 p-2 rounded-xl text-text hover:text-primary hover:bg-white/70 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary/50 transition-all duration-200 backdrop-blur-sm">
          <span class="sr-only">Open main menu</span>
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile menu -->
  <div class="mobile-menu hidden md:hidden mt-2">
    <div class="bg-white/90 backdrop-blur-md border border-white/20 rounded-2xl shadow-lg px-4 py-4 space-y-2">
      {menuItems.map(item => (
        item.isButton ? (
          <a href={item.href} class="bg-primary/90 text-white block px-4 py-2 rounded-xl font-medium hover:bg-primary transition-all duration-200 backdrop-blur-sm">
            {item.text}
          </a>
        ) : (
          <a href={item.href} class="text-text/80 hover:text-primary block px-3 py-2 font-medium hover:bg-white/50 rounded-lg transition-all duration-200">
            {item.text}
          </a>
        )
      ))}
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const button = document.querySelector('.mobile-menu-button');
    const menu = document.querySelector('.mobile-menu');
    
    if (button && menu) {
      button.addEventListener('click', function() {
        menu.classList.toggle('hidden');
      });
    }
  });
</script>