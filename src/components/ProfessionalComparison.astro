---
const professionals = [
    { role: "Marketing Manager", cost: "Rp 8.000.000" },
    { role: "SEO Specialist", cost: "Rp 6.000.000" },
    { role: "Copywriter", cost: "Rp 5.000.000" },
    { role: "Business Analyst", cost: "Rp 7.000.000" },
];

const aipediaCost = "Rp 394.000";
---

<section
    class="py-16 md:py-24 px-4 relative bg-gradient-to-br from-gray-900 via-black to-gray-900 overflow-hidden"
>
    <div class="relative z-10 max-w-5xl mx-auto">
        <!-- Section Header Case -->
        <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white">
                vs <span
                    class="bg-gradient-to-r from-primary-400 to-primary-600 bg-clip-text text-transparent"
                    >Hire Profesional</span
                >
            </h2>
            <p class="text-base text-gray-400 max-w-2xl mx-auto">
                Antara membayar gaji bulanan tim profesional atau akses lifetime
                asisten AI spesialis.
            </p>
        </div>

        <!-- Comparison Grid -->
        <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
            <!-- Expense Column -->
            <div
                class="p-6 rounded-xl bg-red-500/5 backdrop-blur-sm border border-red-500/20"
            >
                <h3 class="text-lg font-bold text-red-300 mb-4 tracking-tight">
                    Hire Tim Profesional
                </h3>

                <div class="space-y-3">
                    {
                        professionals.map((prof) => (
                            <div class="flex justify-between items-center border-b border-white/5 pb-2">
                                <span class="text-gray-400 text-sm">
                                    {prof.role}
                                </span>
                                <span class="text-red-400/80 text-sm font-medium">
                                    {prof.cost}
                                </span>
                            </div>
                        ))
                    }
                    <div
                        class="pt-4 flex justify-between items-center text-white font-bold"
                    >
                        <span class="text-sm">Total per Bulan</span>
                        <span class="text-lg font-black">Rp 26.000.000+</span>
                    </div>
                    <p class="text-[10px] text-gray-600 italic mt-4">
                        *Estimasi gaji min. untuk hasil berkualitas expert.
                    </p>
                </div>
            </div>

            <!-- AIPEDIA Column -->
            <div
                class="p-6 rounded-xl bg-primary-500/5 backdrop-blur-sm border border-primary-500/20 relative"
            >
                <h3
                    class="text-lg font-bold text-primary-300 mb-4 tracking-tight"
                >
                    Solusi AIPEDIA
                </h3>

                <div class="space-y-3">
                    <div class="flex items-start gap-2">
                        <span
                            class="w-1 h-1 bg-primary-400 rounded-full mt-2 flex-shrink-0"
                        ></span>
                        <span class="text-gray-300 text-sm"
                            >12+ Asisten AI Spesialis di berbagai bidang</span
                        >
                    </div>
                    <div class="flex items-start gap-2">
                        <span
                            class="w-1 h-1 bg-primary-400 rounded-full mt-2 flex-shrink-0"
                        ></span>
                        <span class="text-gray-300 text-sm"
                            >Siap bekerja 24/7 tanpa perlu gaji & THR</span
                        >
                    </div>
                    <div class="flex items-start gap-2">
                        <span
                            class="w-1 h-1 bg-primary-400 rounded-full mt-2 flex-shrink-0"
                        ></span>
                        <span class="text-gray-300 text-sm"
                            >Framework teruji untuk hasil yang konsisten</span
                        >
                    </div>

                    <div class="pt-8 flex flex-col items-center">
                        <div
                            class="text-[10px] text-primary-400 font-bold uppercase tracking-widest mb-1"
                        >
                            Cukup Satu Kali Bayar
                        </div>
                        <div
                            class="text-3xl font-black text-white mb-6 uppercase"
                        >
                            {aipediaCost}
                        </div>
                        <a
                            href="#pricing"
                            class="inline-flex items-center gap-2 px-6 py-3 bg-white/5 hover:bg-white/10 text-white font-medium rounded-lg border border-white/20 hover:border-primary-500/30 transition-all duration-200 backdrop-blur-sm"
                        >
                            Dapatkan Akses Sekarang
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
